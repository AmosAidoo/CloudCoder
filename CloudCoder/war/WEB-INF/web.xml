<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Context parameters -->
  <context-param>
    <!-- Note: keep the param-name and param-value elements on the same line
         without any spaces between them.  This allows automated setting
         of the webapp configuration properties when the app is deployed
         using CloudCoderWebServer. -->

    <!-- MySQL username. -->
    <param-name>cloudcoder.db.user</param-name><param-value>root</param-value>
  </context-param>
  <context-param>
    <!-- MySQL password. -->
    <param-name>cloudcoder.db.passwd</param-name><param-value>root</param-value>
  </context-param>
  <context-param>
    <!-- Name of MySQL database where the CloudCoder tables are. -->
    <param-name>cloudcoder.db.databaseName</param-name><param-value>cloudcoder</param-value>
  </context-param>
  <context-param>
    <!-- Host where MySQL server is running. -->
    <param-name>cloudcoder.db.host</param-name><param-value>localhost</param-value>
  </context-param>
  <context-param>
    <!-- Set this to :8889 if using MAMP, otherwise leave it blank. -->
    <param-name>cloudcoder.db.portstr</param-name><param-value>:8889</param-value>
  </context-param>
  <context-param>
    <!-- Port that the out of process submit service will listen on
         for connections from Builders. -->
    <param-name>cloudcoder.submitsvc.oop.port</param-name><param-value>47374</param-value>
  </context-param>
  <!-- type of login service to use.  Choices include:
  		database (default): Username and passwords directly in the cloudcoder backend database
  		imap: authenticate against an imap server
  --> 
  <context-param>
	<param-name>cloudcoder.login.service</param-name><param-value></param-value>
  </context-param>
  
  <!-- host to authenticate against, if using imap authentication
  	against a mail server. 
   -->
  <context-param>
	<param-name>cloudcoder.login.host</param-name><param-value>199.36.142.222</param-value>
  </context-param>
  <!-- RPC servlets -->
  <servlet>
    <servlet-name>ConfigurationSetting</servlet-name>
    <servlet-class>org.cloudcoder.app.server.rpc.ConfigurationSettingServiceImpl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>org.cloudcoder.app.server.rpc.LoginServiceImpl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetCoursesAndProblems</servlet-name>
    <servlet-class>org.cloudcoder.app.server.rpc.GetCoursesAndProblemsServiceImpl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EditCode</servlet-name>
    <servlet-class>org.cloudcoder.app.server.rpc.EditCodeServiceImpl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Submit</servlet-name>
    <servlet-class>org.cloudcoder.app.server.rpc.SubmitServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ConfigurationSetting</servlet-name>
    <url-pattern>/cloudcoder/configurationSetting</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/cloudcoder/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetCoursesAndProblems</servlet-name>
    <url-pattern>/cloudcoder/getCoursesAndProblems</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditCode</servlet-name>
    <url-pattern>/cloudcoder/editCode</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Submit</servlet-name>
    <url-pattern>/cloudcoder/submit</url-pattern>
  </servlet-mapping>
  
  <!-- Admin servlets. -->
  <servlet>
    <servlet-name>AdminProblems</servlet-name>
    <servlet-class>org.cloudcoder.app.server.admin.Problems</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminProblems</servlet-name>
    <url-pattern>/cloudcoder/admin/problems/*</url-pattern>
  </servlet-mapping>
  
  <!-- Admin filters. -->
  <filter>
    <filter-name>AdminProblemsAuthorizationFilter</filter-name>
    <filter-class>org.cloudcoder.app.server.admin.ProblemsAuthorizationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AdminProblemsAuthorizationFilter</filter-name>
    <url-pattern>/cloudcoder/admin/problems/*</url-pattern>
  </filter-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>CloudCoder.html</welcome-file>
  </welcome-file-list>
  
  <!-- Listeners -->
  <listener>
    <listener-class>org.cloudcoder.app.server.submitsvc.oop.OutOfProcessSubmitService</listener-class>
  </listener>
  <listener>
    <listener-class>org.cloudcoder.app.server.persist.JDBCDatabaseConfigServletContextListener</listener-class>
  </listener>

</web-app>
